@page 
 
 
 
@{ 
    ViewData["Title"] = "Registration"; 
} 
 
<h1 class="text-center">@ViewData["Title"]</h1> 
<div class="container mt-5"> 
    <div class="row justify-content-center"> 
        <div class="col-md-6"> 
            <form asp-action="Register" method="post"> 
                <div class="mb-3"> 
                    <label class="form-label">Full Name</label> 
                    <input type="text" class="form-control" name="Name" /> 
                </div> 
                <div class="mb-3"> 
                    <label class="form-label">Gurdian Name</label> 
                    <input type="text" class="form-control" name="Address" /> 
                </div> 
                <div class="mb-3"> 
                    <label class="form-label">Gurdian Contact</label> 
                    <input type="text" class="form-control" name="Address" /> 
                </div> 
 
                <div class="mb-3"> 
                    <label class="form-label">School Name</label> 
                    <input type="text" class="form-control" name="Address" /> 
                </div> 
 
                <div class="mb-3"> 
                    <label class="form-label">Pass Grade</label> 
                    <input type="text" class="form-control" name="Address" /> 
                </div> 
                <div class="mb-3"> 
                    <label class="form-label">Graduated Year</label> 
                    <input type="date" class="form-control" name="DOB" /> 
                </div> 
                <div class="d-grid"> 
                    <button type="submit" class="btn btn-primary">Register</button> 
                </div> 
            </form> 
            <div class="mt-3"> 
                <a href="@Url.Action("Customer", "Customer")" class="btn btn-secondary w-100"> 
                    Go Back to Customer List</a> 
            </div> 
        </div> 
    </div> 
</div> 
 